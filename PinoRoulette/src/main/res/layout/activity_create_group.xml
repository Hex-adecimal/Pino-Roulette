<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#033B67"
    tools:context=".CreateGroup">

    <EditText
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="217dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="cursive"
        android:inputType="textPersonName"
        android:text="PinoRoulette"
        android:textAlignment="inherit"
        android:textColor="#009688"
        android:textSize="6mm"

        app:layout_constraintBottom_toTopOf="@+id/btn_sbmt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="218dp"
        android:layout_height="162dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_group_name"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/martinitt" />

    <EditText
        android:id="@+id/edt_group_name"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:hint="Enter group's name"
        android:minHeight="48dp"
        android:textColorHint="#BCFFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_sbmt"
        app:layout_constraintEnd_toEndOf="@+id/btn_sbmt"
        app:layout_constraintStart_toStartOf="@+id/btn_sbmt"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:autofillHints="" />


    <Button
        android:id="@+id/btn_sbmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_group_name"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="342dp"
        android:text="create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>

